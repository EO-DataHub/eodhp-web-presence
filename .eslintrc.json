{
    "env": {
        "es6": true,
        "browser": true,
        "amd": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Drupal": "readonly",
        "drupalSettings": "readonly",
        "__VERSION__": "readonly",
        "__GEO_WIDGETS_MAX_PRECISION__": "readonly",
        "__MAPSERVER_URL_PREFIX__": "readonly",
        "__CDS_URL_PREFIX__": "readonly",
        "__RESTENDPOINTS_MYTERMS__": "readonly",
        "jQuery": "readonly",
        "require": "readonly",
        "describe": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "it": "readonly",
        "expect": "readonly",
        "module": "readonly",
        "inject": "readonly",
        "jasmine": "readonly",
        "getJSONFixture": "readonly",
        "showdown": "readonly"
    },
    //"parser": "@babel/eslint-parser",
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 8,
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "requireConfigFile": false
    },
    "rules": {
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "none",
                "caughtErrors": "none"
            }
        ],
        "no-prototype-builtins": "off",
        "comma-dangle": "off",
        "no-extra-semi": "warn",
        "no-undef": "error",
        "no-var": "off",
        "quotes": "off",
        "semi": "off",
        "space-before-blocks": "off",
        "no-mixed-spaces-and-tabs": "off",
        "no-redeclare": "error",
        "consistent-return": "error",
        "no-constructor-return": "error",
        "no-eval": "error",
        "no-implicit-globals": "error",
        "no-implied-eval": "error",
        //"no-loop-func": "error", // matches, eg, $.each(...), which is safe
        "no-self-compare": "error",
        "no-shadow": "error",
        "import/no-named-as-default-member": "off"
    },
    "ignorePatterns": ["*.min.js"]
}